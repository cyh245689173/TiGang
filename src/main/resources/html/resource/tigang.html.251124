                    updateInstructions();
                }
            });

            // é‡ç½®è®­ç»ƒ
            resetBtn.addEventListener('click', resetTraining);

            // å…³é—­å®ŒæˆåŠ¨ç”»
            closeAnimationBtn.addEventListener('click', function () {
                completionAnimation.classList.remove('show');
                resetTraining();
            });

            // å¼€å§‹è®­ç»ƒå‡½æ•°
            function startTraining() {
                isTraining = true;
                isPaused = false;
                startBtn.style.display = 'none';
                pauseBtn.style.display = 'block';

                const settings = difficultySettings[currentDifficulty];
                totalTime = settings.totalTime;
                timeLeft = totalTime;
                currentPhase = 'contract';
                lastPhaseChangeTime = 0;

                updateTimerDisplay();
                startTimer();
                updateAnimation();
                updateInstructions();
            }

            // å¯åŠ¨è®¡æ—¶å™¨
            function startTimer() {
                clearInterval(timer); // æ¸…é™¤å·²æœ‰è®¡æ—¶å™¨
                timer = setInterval(function () {
                    if (!isPaused) {
                        timeLeft--;
                        updateTimerDisplay();
                        updateProgressBar();

                        if (timeLeft <= 0) {
                            finishTraining();
                        } else {
                            const elapsed = totalTime - timeLeft;
                            const settings = difficultySettings[currentDifficulty];
                            const phaseDuration = currentPhase === 'contract' ? settings.contractTime : settings.relaxTime;

                            // æ£€æŸ¥æ˜¯å¦éœ€è¦åˆ‡æ¢é˜¶æ®µ
                            if (elapsed - lastPhaseChangeTime >= phaseDuration) {
                                currentPhase = currentPhase === 'contract' ? 'relax' : 'contract';
                                lastPhaseChangeTime = elapsed;
                                updateAnimation();
                                updateInstructions();
                            }
                        }
                    }
                }, 1000);
            }

            // æ›´æ–°åŠ¨ç”»
            function updateAnimation() {
                if (currentPhase === 'contract') {
                    pelvicAnimation.classList.add('contracted');
                    animationText.textContent = "æ”¶ç¼©!";
                } else {
                    pelvicAnimation.classList.remove('contracted');
                    animationText.textContent = "æ”¾æ¾~";
                }
            }

            // æ›´æ–°è¯´æ˜
            function updateInstructions() {
                if (isPaused) {
                    instructions.textContent = "è®­ç»ƒå·²æš‚åœ";
                } else if (currentPhase === 'contract') {
                    instructions.textContent = "æ”¶ç¼©ç›†åº•è‚Œï¼ˆæè‚›åŠ¨ä½œï¼‰";
                } else {
                    instructions.textContent = "æ”¾æ¾ç›†åº•è‚Œ";
                }
            }

            // æ›´æ–°è®¡æ—¶å™¨æ˜¾ç¤º
            function updateTimerDisplay() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }

            // æ›´æ–°è¿›åº¦æ¡
            function updateProgressBar() {
                const progress = ((totalTime - timeLeft) / totalTime) * 100;
                progressBar.style.width = `${progress}%`;
            }

            // å®Œæˆè®­ç»ƒ
            function finishTraining() {
                clearInterval(timer);
                isTraining = false;
                startBtn.style.display = 'block';
                pauseBtn.style.display = 'none';

                // è½¬æ¢è®­ç»ƒæ—¶é•¿ä¸ºåˆ†é’Ÿ
                const duration = Math.floor(totalTime / 60);
                // è°ƒç”¨åç«¯æ¥å£
                fetch('/api/ti/training/addRecord', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': localStorage.getItem('authToken')
                    },
                    body: JSON.stringify({
                        difficulty: currentDifficulty,
                        duration: duration
                    })
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('è®°å½•ä¿å­˜å¤±è´¥ï¼š' + response.status);
                        }
                        return response.json();
                    })
                    .then(() => {
                        // æˆåŠŸä¿å­˜è®°å½•åé‡æ–°è°ƒç”¨ç»Ÿè®¡æ¥å£
                        loadStats();
                    })
                    .catch(error => {
                        alert('è®­ç»ƒè®°å½•ä¿å­˜å¤±è´¥: ' + error.message);
                    });

                // ç°æœ‰å®ŒæˆåŠ¨ç”»ä»£ç 
                completionAnimation.classList.add('show');
                todayCount++;
                completedCount++;
                updateStats();
                saveStats();
                createConfetti();
            }

            // é‡ç½®è®­ç»ƒ
            function resetTraining() {
                clearInterval(timer);
                isTraining = false;
                isPaused = false;

                const settings = difficultySettings[currentDifficulty];
                totalTime = settings.totalTime;
                timeLeft = totalTime;

                startBtn.style.display = 'block';
                pauseBtn.style.display = 'none';
                pauseBtn.innerHTML = '<i class="fas fa-pause"></i> æš‚åœ';

                pelvicAnimation.classList.remove('contracted');
                animationText.textContent = "å‡†å¤‡å¼€å§‹";
                instructions.textContent = "ç‚¹å‡»å¼€å§‹æŒ‰é’®ï¼Œè·ŸéšåŠ¨ç”»è¿›è¡Œè®­ç»ƒ";

                updateTimerDisplay();
                progressBar.style.width = '0%';
            }

            // æ˜¾ç¤ºå®ŒæˆåŠ¨ç”»
            function showCompletionAnimation() {
                completionAnimation.classList.add('show');

                // åˆ›å»ºäº”å½©çº¸å±‘æ•ˆæœ
                for (let i = 0; i < 100; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = `${Math.random() * 100}%`;
                    confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 70%, 60%)`;
                    confetti.style.animationDelay = `${Math.random() * 2}s`;
                    completionAnimation.appendChild(confetti);

                    // åŠ¨ç”»ç»“æŸåç§»é™¤å…ƒç´ 
                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }
            }

            // æ›´æ–°ç»Ÿè®¡æ˜¾ç¤º
            function updateStatsDisplay() {
                completedValue.textContent = completedCount;
                todayValue.textContent = todayCount;
                streakValue.textContent = streak;
            }

            // ä¿å­˜ç»Ÿè®¡æ•°æ®åˆ°æœ¬åœ°å­˜å‚¨
            function saveStats() {
                localStorage.setItem('pelvicTrainerStats', JSON.stringify({
                    completed: completedCount,
                    today: todayCount,
                    streak: streak,
                    lastDate: new Date().toDateString()
                }));
            }

            // ä»æœ¬åœ°å­˜å‚¨åŠ è½½ç»Ÿè®¡æ•°æ®
            function loadStats() {
                // æ˜¾ç¤ºåŠ è½½çŠ¶æ€
                instructions.textContent = 'æ­£åœ¨åŠ è½½ç»Ÿè®¡æ•°æ®...';

                // ä¿®æ”¹è¯·æ±‚è·¯å¾„
                fetch('/api/ti/training/stats', {
                    method: 'GET', // æ˜ç¡®è¯·æ±‚æ–¹å¼ä¸º GET
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': localStorage.getItem('authToken')
                    },
                })
                    .then(response => {
                        if (!response.ok) throw new Error('ç½‘ç»œå“åº”å¼‚å¸¸');
                        return response.json();
                    })
                    .then(data => {
                        // ä»è¿”å›å€¼çš„ conten ä¸­è·å–æ•°æ®
                        const actualData = data.content;
                        // æ›´æ–°DOMå…ƒç´ 
                        completedValue.textContent = actualData.totalTimes;
                        todayValue.textContent = actualData.todayTimes;
                        streakValue.textContent = actualData.continuousDays;
                        instructions.textContent = 'æ•°æ®åŠ è½½å®Œæˆ';
                    })
                    .catch(error => {
                        console.error('ç»Ÿè®¡æ•°æ®è·å–å¤±è´¥:', error);
                        instructions.textContent = 'æ•°æ®åŠ è½½å¤±è´¥ï¼Œè¯·ç¨åé‡è¯•';
                        // ä¿ç•™æœ¬åœ°å­˜å‚¨çš„ç»Ÿè®¡æ•°æ®ä½œä¸ºå›é€€
                        const localData = JSON.parse(localStorage.getItem('trainingStats') || '{}');
                        completedValue.textContent = localData.completed || 0;
                        todayValue.textContent = localData.today || 0;
                        streakValue.textContent = localData.streak || 0;
                    });
            }

        });

        // æ’è¡Œæ¦œæŒ‰é’®ç‚¹å‡»äº‹ä»¶
        leaderboardBtn.addEventListener('click', function () {
            // åœ¨å®é™…åº”ç”¨ä¸­ï¼Œè¿™é‡Œä¼šè·³è½¬åˆ°æ’è¡Œæ¦œé¡µé¢
            window.location.href = '/tigang/rank.html';
        });
    </script>
