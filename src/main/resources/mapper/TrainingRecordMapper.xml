<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.copico.mapper.ITrainingRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.copico.model.domain.TrainingRecord">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="difficulty" property="difficulty"/>
        <result column="duration" property="duration"/>
        <result column="calorie" property="calorie"/>
        <result column="training_date" property="trainingDate"/>
        <result column="delete_flag" property="deleteFlag"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, difficulty, duration, calorie, training_date, delete_flag, create_user, create_time, update_user, update_time
    </sql>

</mapper>
